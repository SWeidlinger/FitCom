<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:background="@drawable/dialog_rounded_corner"
    android:layout_height="wrap_content">

    <EditText
        android:id="@+id/dialog_add_body_weight_text"
        android:layout_width="153dp"
        android:layout_height="43dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Enter Weight"
        android:inputType="number"
        android:textAlignment="center"
        app:layout_constraintEnd_toStartOf="@+id/dialog_add_body_weight_button_minus"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/dialog_add_body_weight_button_plus"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/dialog_add_body_weight_button_plus"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/rounded_corner_rectangle"
        app:layout_constraintBottom_toBottomOf="@+id/dialog_add_body_weight_text"
        app:layout_constraintEnd_toStartOf="@+id/dialog_add_body_weight_text"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/dialog_add_body_weight_text"
        app:srcCompat="@drawable/add_icon" />

    <ImageButton
        android:id="@+id/dialog_add_body_weight_button_minus"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/rounded_corner_rectangle"
        app:layout_constraintBottom_toBottomOf="@+id/dialog_add_body_weight_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/dialog_add_body_weight_text"
        app:layout_constraintTop_toTopOf="@+id/dialog_add_body_weight_text"
        app:srcCompat="@drawable/subtract_icon" />

    <Button
        android:id="@+id/dialog_add_body_weight_button_cancle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Cancle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/dialog_add_body_weight_button_add"
        app:layout_constraintTop_toBottomOf="@+id/dialog_add_body_weight_text" />

    <Button
        android:id="@+id/dialog_add_body_weight_button_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/dialog_add_body_weight_button_cancle"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_add_body_weight_text" />
</androidx.constraintlayout.widget.ConstraintLayout>