<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/workouts_list_item_rectangle"
        android:layout_width="match_parent"
        android:layout_height="55dp"


        android:layout_marginStart="16dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/rounded_corner_rectangle"
        android:backgroundTint="#FFC107"
        android:paddingTop="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/workouts_item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Push-Training"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/workouts_list_item_rectangle"
        app:layout_constraintStart_toStartOf="@+id/workouts_list_item_rectangle"
        app:layout_constraintTop_toTopOf="@+id/workouts_list_item_rectangle"
        app:layout_constraintVertical_bias="0.478" />

    <ImageButton
        android:id="@+id/workouts_item_delete_button"
        android:layout_width="61dp"
        android:layout_height="0dp"
        android:layout_alignParentEnd="true"
        android:backgroundTint="@android:color/transparent"
        android:src="@drawable/ic_baseline_delete_24"
        android:tint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/workouts_list_item_rectangle"
        app:layout_constraintEnd_toEndOf="@+id/workouts_list_item_rectangle"
        app:layout_constraintTop_toTopOf="@+id/workouts_list_item_rectangle"
        tools:src="@drawable/ic_baseline_delete_24" />

</androidx.constraintlayout.widget.ConstraintLayout>